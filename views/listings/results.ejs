<% layout("/layouts/boilerplate") %>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-5">
        <% for(let listing of results){ %>
            <a href="/listings/<%= listing.item._id %>" class="listing-link">
            <div class="card col listing-card">
                 <img src="<%= listing.item.image.url %>" class="card-img-top"
                        alt="Listing Image" style="height: 20rem;">

                <div class="card-img-overlay"></div>

                <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.item.title %>
                            </b> <br>
                            Price: &#8377;<%= listing.item.price.toLocaleString("en-IN") %> / Night
                            <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                        </p>
                </div>
            </div>
            </a>
            <%}%>
    </div>

</body>