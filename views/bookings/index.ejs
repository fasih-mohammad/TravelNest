<% layout("/layouts/boilerplate") %>
<div class="container">
    <h1>My Bookings</h1>
    <% if (bookings.length > 0) { %>
        <% bookings.forEach(booking => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title"><%= booking.listingId.title %></h5>
                    <p class="card-text">
                        Check-In: <%= booking.checkInDate.toDateString() %><br>
                        Check-Out: <%= booking.checkOutDate.toDateString() %><br>
                        Total Price: â‚¹<%= booking.totalPrice.toLocaleString("en-IN") %>
                    </p>
                    <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Cancel Booking</button>
                    </form>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p>You have no bookings yet.</p>
    <% } %>
</div>